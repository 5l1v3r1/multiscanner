{
    "index_patterns": "multiscanner_reports",
    "settings": {
        "index": {
            "mapping.coerce": true,
            "number_of_shards": "5",
            "codec": "best_compression",
            "number_of_replicas": "1"
        },
        "analysis": {
            "analyzer": {
                "ssdeep_analyzer": {"tokenizer": "ssdeep_tokenizer"}
            },
            "tokenizer": {
                "ssdeep_tokenizer": {
                    "type": "ngram",
                    "min_gram": 7,
                    "max_gram": 7
                }
            }
        }
    },
    "mappings": {
        "_doc": {
            "properties": {
                "doc_type": {
                    "type": "join",
                    "relations": {
                        "sample": ["report", "note"]
                    }
                },
                "filename": {"type": "text"},
                "filemeta": {
                    "properties": {
                        "sha256": {"type": "keyword"},
                        "ssdeep": {"type": "keyword"}
                    }
                },
                "ssdeep_analytics": {
                    "properties": {
                        "analyzed": {"type": "boolean"},
                        "chunksize": {"type": "integer"},
                        "chunk": {
                            "analyzer": "ssdeep_analyzer",
                            "type": "text"
                        },
                        "double_chunk": {
                            "analyzer": "ssdeep_analyzer",
                            "type": "text"
                        }
                    }
                },
                "timestamp": {"type": "date"},
                "Scan Metadata": {
                    "properties": {
                        "Scan Time": {"type": "date"},
                        "Task ID": {"type": "integer"}
                    }
                }
            }
        }
    }
}
